<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000" >

    <CheckBox
        android:id="@+id/checkBoxSaveEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="@string/empty" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="@string/preference" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/checkBoxSaveEqual"
        android:layout_below="@+id/textView2"
        android:background="@drawable/linegraydark"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="15dp"
        android:text="@string/saveText" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/checkBoxSaveEqual"
        android:layout_below="@+id/checkBoxSaveEqual"
        android:layout_marginTop="15dp"
        android:background="@drawable/linegraylightdark"
        android:orientation="vertical" >
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBoxSelectTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="@string/empty"  />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LinearLayout01"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="15dp"
        android:text="@string/chossetheme" />

</RelativeLayout>